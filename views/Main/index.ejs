<%-include('../layout/User/header')-%>
            <!-- row -->
            <div class="row tm-content-row tm-mt-big">
               
                <div class="tm-col tm-col-big">
                    <div class="bg-white tm-block h-100">
                        <div class="row">
                            <div class="col-8">
                                <h2 class="tm-block-title d-inline-block">Your Events</h2>
                                <a href="/Main/events" class="tm-link-black" style="float: right;">View All</a>
                            </div>
                           
                        </div>
                        <% if (events != '') { %>
                        <ol class="tm-list-group tm-list-group-alternate-color tm-list-group-pad-big">
                            <% events.forEach((row,index) => {%>
                                <li class="tm-list-group-item"><td><%= row.name %></td></li>
                                <%  }) %>
                        </ol>
                        <% } else{ %>
                            <h3 class="text-center text-secondary mt-5"> You haven't created events yet.</h3>
                                            <% } %>
                    </div>
                </div>
                
                <div class="tm-col tm-col-big">
                    <div class="bg-white tm-block h-100">
                        <div class="row">
                            <div class="col-8">
                                <h2 class="tm-block-title d-inline-block">Upcoming Events</h2>
                                <a href="/Main/upcomingevents" class="tm-link-black" style="float: right;">View All</a>
                            </div>
                           
                        </div>
                 
                        
                        <% if (events != '') { %>
                        <ol class="tm-list-group">
                            <% events.forEach((row,index) => {%>
                            <li class="tm-list-group-item"><td><%= row.name %></td></li>
                            <%  }) %>
                        </ol>
                        <% } else{ %>
                            <h3 class="text-center text-secondary mt-5"> No Upcoming event found.</h3>
                                            <% } %>
                    </div>
                </div>
            </div>
            <%-include('../layout/User/footer')-%>