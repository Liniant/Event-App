<%-include('../layout/Admin/header')-%>
 
        <!-- row -->
        <div class="row tm-mt-big">
            <div class="col-xl-8 col-lg-10 col-md-12 col-sm-12">
                <div class="bg-white tm-block">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="tm-block-title d-inline-block">Edit User (<%= user.name %>)</h2>
                        </div>
                    </div>
                    <div class="row mt-4 tm-edit-product-row">
                        <div class="col-xl-7 col-lg-7 col-md-12">
                            <form action="/update_user" method="post" id="add-form" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label for="name">Name</label>
                                    <input type="text" name="name" value="<%= user.name %>" class="form-control form-control-sm" placeholder="Enter Name" />
                                </div>
                                <div class="mb-3">
                                    <label for="name">Surname</label>
                                    <input type="text" name="surname" value="<%= user.surname %>" class="form-control form-control-sm" placeholder="Enter Name" />
                                </div>
                                <div class="mb-3">
                                    <label for="email">Email</label>
                                    <input type="email" name="email" value="<%= user.email %>"  class="form-control form-control-sm" placeholder="Enter Email" readonly="true" />
                                </div>
                                <div class="mb-3">
                                    <label for="phone">Phone</label>
                                    <input type="tel" name="phone" value="<%= user.phone %>"  class="form-control form-control-sm" placeholder="Enter Phone" />
                                </div>
                                
                                <div class="mb-3">
                                    <input type="submit" name="submit" value="Update User" class="btn btn-success btn-md" />
                                </div>
                            </form>
                        </div>
                       
                    </div>
                </div>
            </div>
        </div>
        <%-include('../layout/Admin/footer')-%>